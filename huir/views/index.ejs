          "image": "https://ws3.sinaimg.cn/large/006tNc79gy1fzq30wq1kdj31400dwqax.jpg"
        }
      ],

      currentIndex: 0, //当前指标。
      timer: ''        //轮换时间。
    },
    methods: {
      go() {           //mouseleave 正常轮换。
        this.timer = setInterval(() => {
          this.autoPlay()
        }, 4000)
      },
      stop() {        //mouseenter 停止轮换。
        clearInterval(this.timer)
        this.timer = null
      },
      change(index) {   //把当前指标换为鼠标所覆盖的指标。
        this.currentIndex = index
      },
      autoPlay() {     //产品数组内自动轮换。
        this.currentIndex++
        if (this.currentIndex > this.slideList.length - 1) {
          this.currentIndex = 0
        }
      }
    },
    created() {    //转换时间。
      this.$nextTick(() => {
        this.timer = setInterval(() => {
          this.autoPlay()
        }, 4000)
      })
    }
  })

</script>
