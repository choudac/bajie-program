<script>

  new Vue({
    el: '#app',
    data: {
      slideList: [  //巨幕轮换-数据。
        {
          "clickUrl": "/",
          "image": "https://ws3.sinaimg.cn/large/006tNc79gy1fzq30uo7wbj31400dw46b.jpg"
